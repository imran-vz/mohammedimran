---
import { Image } from "astro:assets";
import mohammedimran from "../assets/mohammedimran.webp";
---

<div
    class="relative isolate min-h-svh flex items-center justify-center lg:px-8"
>
    <!-- Background Gradients -->
    <div
        class="absolute pointer-events-none inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
        aria-hidden="true"
    >
        <div
            class="relative left-[calc(50%-11rem)] aspect-1155/678 w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
            style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        >
        </div>
    </div>

    <div class="mx-auto max-w-4xl px-6 py-16 sm:py-24 lg:px-8">
        <div class="text-center space-y-6">
            <!-- Profile Image with Enhanced Design -->
            <div class="flex justify-center mb-6">
                <div class="relative">
                    <div
                        class="absolute inset-0 bg-gradient-to-tr from-skin-accent/20 to-skin-accent/10 rounded-full scale-110 animate-pulse"
                    >
                    </div>
                    <Image
                        src={mohammedimran}
                        format={"webp"}
                        width={300}
                        height={300}
                        densities={[1, 1.5, 2]}
                        class="relative object-cover shrink-0 w-40 h-40 sm:w-56 sm:h-56 md:w-64 md:h-64 lg:w-72 lg:h-72 rounded-full border-4 border-skin-accent/20 shadow-2xl"
                        title="Mohammed Imran Standing with his bike near a beach"
                        loading="eager"
                        fetchpriority={"high"}
                        alt="Mohammed Imran"
                    />
                    <!-- Floating Elements -->
                    <div
                        class="absolute -top-4 -right-4 w-8 h-8 bg-skin-accent rounded-full animate-bounce"
                    >
                    </div>
                    <div
                        class="absolute -bottom-2 -left-6 w-6 h-6 bg-skin-accent/60 rounded-full animate-bounce"
                        style="animation-delay: 0.5s;"
                    >
                    </div>
                </div>
            </div>

            <!-- Enhanced Typography -->
            <div class="space-y-4">
                <h1
                    class="text-3xl sm:text-5xl lg:text-7xl font-bold tracking-tight text-skin-base bg-clip-text bg-gradient-to-r from-skin-base to-skin-accent"
                >
                    Mohammed Imran
                </h1>

                <div
                    class="text-xl sm:text-2xl font-semibold text-skin-accent mb-2"
                >
                    Senior Full Stack Developer
                </div>

                <p
                    class="mx-auto max-w-2xl text-base sm:text-lg leading-7 sm:leading-8 text-skin-base/80"
                >
                    Passionate about crafting exceptional web experiences with
                    modern technologies. Currently building scalable solutions
                    at
                    <a
                        href="https://www.thoughtseed.io/"
                        class="text-skin-accent hover:text-skin-base transition-colors duration-200 underline decoration-skin-accent/50 hover:decoration-skin-accent focus-outline font-medium"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        Thoughtseed
                    </a>, specializing in full-stack development and system
                    architecture.
                </p>
            </div>

            <!-- Enhanced CTA Buttons -->
            <div
                class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 pt-6"
            >
                <a
                    href="/#technologies"
                    class="group bg-skin-accent text-white px-8 py-4 text-lg font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 hover:transform hover:-translate-y-1 focus-outline w-full sm:w-auto"
                >
                    <span class="flex items-center justify-center gap-2">
                        Explore My Work
                        <svg
                            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </span>
                </a>
                <a
                    href="mailto:hello@imran.codes"
                    class="group border-2 border-skin-accent text-skin-accent px-8 py-4 text-lg font-semibold rounded-xl hover:bg-skin-accent hover:text-white transition-all duration-200 focus-outline w-full sm:w-auto"
                >
                    <span class="flex items-center justify-center gap-2">
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        Get In Touch
                    </span>
                </a>
            </div>

            <!-- Quick Stats -->
            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6 pt-10 sm:pt-12 max-w-2xl mx-auto"
            >
                <div class="text-center">
                    <div
                        class="text-2xl sm:text-3xl font-bold text-skin-accent"
                    >
                        5+
                    </div>
                    <div
                        class="text-xs sm:text-sm text-skin-base/60 font-medium"
                    >
                        Years Experience
                    </div>
                </div>
                <div class="text-center">
                    <div
                        class="text-2xl sm:text-3xl font-bold text-skin-accent"
                    >
                        50+
                    </div>
                    <div
                        class="text-xs sm:text-sm text-skin-base/60 font-medium"
                    >
                        Projects
                    </div>
                </div>
                <div class="text-center">
                    <div
                        class="text-2xl sm:text-3xl font-bold text-skin-accent"
                    >
                        20+
                    </div>
                    <div
                        class="text-xs sm:text-sm text-skin-base/60 font-medium"
                    >
                        Technologies
                    </div>
                </div>
                <div class="text-center">
                    <div
                        class="text-2xl sm:text-3xl font-bold text-skin-accent"
                    >
                        âˆž
                    </div>
                    <div
                        class="text-xs sm:text-sm text-skin-base/60 font-medium"
                    >
                        Cups of Coffee
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Background Gradient -->
    <div
        class="absolute inset-x-0 top-[calc(100%-13rem)] pointer-events-none -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
        aria-hidden="true"
    >
        <div
            class="relative left-[calc(50%-11rem)] aspect-1155/678 w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80df] to-[#89cefc] opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
            style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        >
        </div>
    </div>
</div>
