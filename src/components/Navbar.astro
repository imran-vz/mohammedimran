<header
    class="sticky top-0 z-50 h-20 items-center bg-skin-card/30 backdrop-blur-lg border-b border-skin-accent/20 shadow-md"
>
    <a
        id="skip-to-content"
        class="absolute -top-full left-16 z-50 bg-skin-accent px-3 py-2 text-white focus:top-4"
        href="#main-content">Skip to content</a
    >

    <div
        class="mx-auto w-full max-w-7xl px-3 py-4 sm:px-6 md:px-6 lg:px-8 flex items-center justify-between"
    >
        <!-- Logo -->
        <div class="flex flex-row items-center gap-2">
            <a href="/" class="focus-outline group">
                <h1 class="sr-only">Mohammed Imran</h1>
                <div class="flex items-center gap-2">
                    <span class="text-lg font-medium text-skin-base/80">
                        Mohammed Imran
                    </span>
                </div>
            </a>
        </div>

        <!-- Navigation -->
        <nav class="hidden md:flex items-center gap-6">
            <a
                href="/"
                class="text-sm font-medium text-skin-base/80 hover:text-skin-accent transition-colors"
            >
                Home
            </a>
            <a
                href="/projects"
                class="text-sm font-medium text-skin-base/80 hover:text-skin-accent-secondary transition-colors"
            >
                Projects
            </a>
            <a
                href="/skills"
                class="text-sm font-medium text-skin-base/80 hover:text-skin-accent-tertiary transition-colors"
            >
                Skills
            </a>
            <a
                href="/#contact"
                class="text-sm font-medium text-skin-base/80 hover:text-skin-accent transition-colors"
            >
                Contact
            </a>
        </nav>

        <!-- Theme Toggle -->
        <div class="flex items-center gap-4">
            <button
                id="theme-btn"
                class="focus-outline p-2 rounded-lg hover:bg-skin-accent/10 transition-colors group"
                title="Toggle light & dark theme"
                aria-label="auto"
                aria-live="polite"
            >
                <svg
                    class="size-6 fill-skin-base group-hover:fill-skin-accent transition-colors duration-200"
                    width="21"
                    height="21"
                    xmlns="http://www.w3.org/2000/svg"
                    id="moon-svg"
                >
                    <path
                        d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z"
                    ></path>
                </svg>

                <svg
                    class="size-6 fill-skin-base group-hover:fill-skin-accent transition-colors duration-200"
                    width="21"
                    height="21"
                    xmlns="http://www.w3.org/2000/svg"
                    id="sun-svg"
                >
                    <path
                        d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z"
                    ></path>
                </svg>
            </button>
        </div>
    </div>
</header>
