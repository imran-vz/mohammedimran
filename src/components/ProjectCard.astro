---
import type { ProcessedRepo } from "../utils/fetch-github-repos";

export interface Props {
    project: ProcessedRepo;
}

const { project } = Astro.props;

// Language color mapping
const languageColors: Record<string, string> = {
    TypeScript: "bg-[#3178C6]",
    JavaScript: "bg-[#F7DF1E] text-black",
    React: "bg-[#61DAFB] text-black",
    Go: "bg-[#00ADD8]",
    Python: "bg-[#3776AB]",
    Rust: "bg-[#CE412B]",
    Java: "bg-[#007396]",
    HTML: "bg-[#E34F26]",
    CSS: "bg-[#1572B6]",
    Unknown: "bg-gray-500",
};

const languageColor =
    languageColors[project.language] || "bg-skin-accent-secondary";
---

<article
    class="group relative overflow-hidden rounded-xl border border-skin-border bg-skin-card p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-skin-accent/20 hover:border-skin-accent/50"
>
    <!-- Gradient overlay on hover -->
    <div
        class="absolute inset-0 bg-linear-to-br from-skin-accent/5 via-transparent to-skin-accent-secondary/5 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
    >
    </div>

    <div class="relative z-10">
        <!-- Header -->
        <div class="mb-4 flex items-start justify-between gap-3">
            <div class="flex-1">
                <div class="mb-2 flex items-center gap-2 flex-wrap">
                    <h3
                        class="text-xl font-bold text-skin-base group-hover:text-skin-accent transition-colors duration-200"
                    >
                        <a
                            href={project.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="hover:underline"
                        >
                            {project.name.replace(/-/g, " ").replace(/_/g, " ")}
                        </a>
                    </h3>
                    {
                        project.category === "personal" && (
                            <span class="inline-flex items-center gap-1 rounded-full bg-linear-to-r from-purple-500/20 to-blue-500/20 border border-purple-400/30 px-2.5 py-0.5 text-xs font-semibold text-purple-400">
                                Personal
                            </span>
                        )
                    }
                    {
                        project.category === "oss" && (
                            <span class="inline-flex items-center gap-1 rounded-full bg-linear-to-r from-green-500/20 to-emerald-500/20 border border-green-400/30 px-2.5 py-0.5 text-xs font-semibold text-green-400">
                                OSS Contribution
                            </span>
                        )
                    }
                </div>
                <div class="mt-2 flex flex-wrap items-center gap-3 text-sm">
                    <span
                        class={`inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-semibold ${languageColor}`}
                    >
                        {project.language}
                    </span>
                    {
                        project.stars > 0 && (
                            <span class="flex items-center gap-1 text-skin-base/70">
                                <svg
                                    class="h-4 w-4"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                {project.stars}
                            </span>
                        )
                    }
                    {
                        project.forks > 0 && (
                            <span class="flex items-center gap-1 text-skin-base/70">
                                <svg
                                    class="h-4 w-4"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                                {project.forks}
                            </span>
                        )
                    }
                </div>
            </div>
            <a
                href={project.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-skin-base/60 transition-colors hover:text-skin-accent"
                aria-label="View on GitHub"
            >
                <svg
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>

        <!-- Description -->
        <p class="mb-4 line-clamp-2 text-sm text-skin-base/80">
            {project.description}
        </p>

        <!-- Topics -->
        {
            project.topics && project.topics.length > 0 && (
                <div class="flex flex-wrap gap-2">
                    {project.topics.slice(0, 4).map((topic) => (
                        <span class="rounded-md bg-skin-accent/10 px-2 py-1 text-xs text-skin-accent">
                            #{topic}
                        </span>
                    ))}
                </div>
            )
        }

        <!-- Links -->
        <div
            class="mt-4 flex flex-wrap gap-3 border-t border-skin-border/50 pt-4"
        >
            <a
                href={project.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 rounded-lg bg-skin-accent/10 px-4 py-2 text-sm font-medium text-skin-accent transition-all hover:bg-skin-accent hover:text-white"
            >
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path
                        d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"
                    ></path>
                    <path
                        d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"
                    ></path>
                </svg>
                View Code
            </a>
            {
                project.homepage && (
                    <a
                        href={project.homepage}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 rounded-lg border border-skin-accent/30 px-4 py-2 text-sm font-medium text-skin-accent transition-all hover:border-skin-accent hover:bg-skin-accent/10"
                    >
                        <svg
                            class="h-4 w-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                            />
                        </svg>
                        Live Demo
                    </a>
                )
            }
        </div>

        <!-- Last updated -->
        <div class="mt-3 text-xs text-skin-base/50">
            Updated {project.lastUpdated}
        </div>
    </div>
</article>
