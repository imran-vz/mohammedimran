---

<Layout
	title="Skills & Expertise | Mohammed Imran | React, TypeScript, GoLang Developer"
	description="Mohammed Imran's technical skills and expertise. 5+ years experience in React, TypeScript, GoLang, and modern web development. Based in Bengaluru, India."
	canonical="https://imran.codes/skills"
>
	<main class="flex-1 px-4 py-12 sm:px-6 lg:px-8">
		<div class="mx-auto max-w-7xl">
			<!-- Header -->
			<header class="mb-12 text-center">
				<h1
					class="mb-4 bg-gradient-to-r from-skin-accent via-skin-accent-secondary to-skin-accent-tertiary bg-clip-text text-4xl font-bold text-transparent sm:text-5xl lg:text-6xl"
				>
					Skills & Expertise
				</h1>
				<p class="mx-auto max-w-2xl text-lg text-skin-base/80">
					5+ years building scalable, performant web applications. Specialized
					in React, TypeScript, and GoLang.
				</p>
			</header>

			<!-- Experience Timeline -->
			<section class="mb-16">
				<h2 class="mb-8 text-center text-2xl font-bold text-skin-base sm:text-3xl">
					Experience Overview
				</h2>
				<div class="grid gap-6 sm:grid-cols-3">
					{
						experience.map((item) => (
							<div class="group rounded-xl border border-skin-border bg-skin-card p-6 text-center transition-all hover:-translate-y-1 hover:border-skin-accent/50 hover:shadow-lg hover:shadow-skin-accent/20">
								<div class="mb-2 text-sm font-semibold uppercase tracking-wide text-skin-accent">
									{item.year}
								</div>
								<h3 class="mb-2 text-xl font-bold text-skin-base">
									{item.title}
								</h3>
								<p class="text-sm text-skin-base/70">{item.description}</p>
							</div>
						))
					}
				</div>
			</section>

			<!-- Skills Grid -->
			<section class="mb-16">
				<!-- Expert Level -->
				<div class="mb-12">
					<div class="mb-6 flex items-center gap-3">
						<h2 class="text-2xl font-bold text-skin-base">Expert</h2>
						<div class="h-1 flex-1 rounded-full bg-skin-accent"></div>
					</div>
					<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
						{
							skills.expert.map((skill) => (
								<div class="group relative overflow-hidden rounded-xl border-2 border-skin-accent bg-skin-card p-6 transition-all hover:-translate-y-1 hover:shadow-xl hover:shadow-skin-accent/30">
									<div class="absolute inset-0 bg-gradient-to-br from-skin-accent/10 to-transparent opacity-0 transition-opacity group-hover:opacity-100" />
									<div class="relative flex items-center gap-4">
										<div class="text-4xl">{skill.icon}</div>
										<div>
											<h3 class="text-xl font-bold text-skin-base">
												{skill.name}
											</h3>
											<p class="text-sm text-skin-accent">{skill.years} years</p>
										</div>
									</div>
									<div class="mt-4 h-2 overflow-hidden rounded-full bg-skin-border">
										<div class="h-full w-full bg-skin-accent" />
									</div>
								</div>
							))
						}
					</div>
				</div>

				<!-- Proficient Level -->
				<div class="mb-12">
					<div class="mb-6 flex items-center gap-3">
						<h2 class="text-2xl font-bold text-skin-base">Proficient</h2>
						<div
							class="h-1 flex-1 rounded-full bg-skin-accent-secondary"
						>
						</div>
					</div>
					<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
						{
							skills.proficient.map((skill) => (
								<div class="group rounded-xl border border-skin-border bg-skin-card p-6 transition-all hover:-translate-y-1 hover:border-skin-accent-secondary/50 hover:shadow-lg hover:shadow-skin-accent-secondary/20">
									<div class="mb-3 text-center text-3xl">{skill.icon}</div>
									<h3 class="mb-2 text-center text-lg font-bold text-skin-base">
										{skill.name}
									</h3>
									{skill.years && (
										<p class="text-center text-xs text-skin-base/60">
											{skill.years} years
										</p>
									)}
									<div class="mt-3 h-2 overflow-hidden rounded-full bg-skin-border">
										<div class="h-full w-4/5 bg-skin-accent-secondary" />
									</div>
								</div>
							))
						}
					</div>
				</div>

				<!-- Familiar Level -->
				<div>
					<div class="mb-6 flex items-center gap-3">
						<h2 class="text-2xl font-bold text-skin-base">Familiar</h2>
						<div
							class="h-1 flex-1 rounded-full bg-skin-accent-tertiary"
						>
						</div>
					</div>
					<div class="grid gap-4 sm:grid-cols-3 lg:grid-cols-6">
						{
							skills.familiar.map((skill) => (
								<div class="group rounded-xl border border-skin-border bg-skin-card p-4 text-center transition-all hover:-translate-y-1 hover:border-skin-accent-tertiary/50">
									<div class="mb-2 text-2xl">{skill.icon}</div>
									<h3 class="text-sm font-semibold text-skin-base">
										{skill.name}
									</h3>
									<div class="mx-auto mt-2 h-1.5 w-16 overflow-hidden rounded-full bg-skin-border">
										<div class="h-full w-3/5 bg-skin-accent-tertiary" />
									</div>
								</div>
							))
						}
					</div>
				</div>
			</section>

			<!-- GitHub Activity -->
			<section class="mb-16">
				<h2 class="mb-8 text-center text-2xl font-bold text-skin-base sm:text-3xl">
					Open Source Contributions
				</h2>
				<div
					class="mx-auto max-w-4xl rounded-2xl border border-skin-accent/30 bg-gradient-to-br from-skin-accent/5 via-skin-card to-skin-accent-secondary/5 p-8 text-center"
				>
					<a
						href="https://github.com/imran-vz"
						target="_blank"
						rel="noopener noreferrer"
						class="group inline-block"
					>
						<svg
							class="mx-auto mb-4 h-16 w-16 text-skin-accent transition-transform group-hover:scale-110"
